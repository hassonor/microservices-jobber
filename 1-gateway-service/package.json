{
  "name": "jobber-gateway",
  "version": "1.0.0",
  "description": "Gateway service",
  "main": "app.js",
  "scripts": {
    "start": "cross-env pm2 start ./build/src/app.js -i 5 --attach --watch | pino-pretty -c",
    "stop": "cross-env pm2 stop all",
    "delete": "cross-env pm2 delete all",
    "dev": "cross-env nodemon -r tsconfig-paths/register src/app.ts | pino-pretty -c",
    "lint:check": "cross-env eslint 'src/**/*.ts'",
    "lint:fix": "cross-env eslint 'src/**/*.ts' --fix",
    "prettier:check": "cross-env prettier --check 'src/**/*.{ts,json}'",
    "prettier:fix": "cross-env prettier --write 'src/**/*.{ts,json}'",
    "build": "cross-env tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "test": "cross-env jest --coverage=true -w=1 --forceExit --detectOpenHandles --watchAll=false"
  },
  "keywords": [],
  "author": "Or Hasson",
  "license": "MIT",
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@types/compression": "^1.7.5",
    "@types/cookie-session": "^2.0.49",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/hpp": "^0.2.6",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.15.0",
    "@ohjobber/shared": "^0.0.7",
    "@socket.io/redis-adapter": "^8.3.0",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.5",
    "cookie-session": "^2.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "elastic-apm-node": "^4.9.0",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^7.2.0",
    "hpp": "^0.2.3",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "pino-pretty": "^10.3.1",
    "redis": "^4.7.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "typescript": "^5.7.2",
    "typescript-transform-paths": "^3.5.2",
    "winston": "^3.17.0"
  }
}
