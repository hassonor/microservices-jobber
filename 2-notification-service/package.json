{
  "name": "jobber-notifications",
  "version": "1.0.0",
  "main": "app.js",
  "author": "Or Hasson",
  "license": "MIT",
  "scripts": {
    "start": "cross-env pm2 start ./build/src/app.js -i 5 --attach --watch | pino-pretty -c",
    "stop": "cross-env pm2 stop all",
    "delete": "cross-env pm2 delete all",
    "dev": "cross-env nodemon -r tsconfig-paths/register src/app.ts | pino-pretty -c",
    "lint:check": "cross-env eslint 'src/**/*.ts'",
    "lint:fix": "cross-env eslint 'src/**/*.ts' --fix",
    "prettier:check": "cross-env prettier --check 'src/**/*.{ts,json}'",
    "prettier:fix": "cross-env prettier --write 'src/**/*.{ts,json}'",
    "build": "cross-env tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "test": "cross-env jest --coverage=true -w=1 --forceExit --detectOpenHandles --watchAll=false"
  },
  "keywords": [],
  "dependencies": {
    "@elastic/elasticsearch": "^8.15.0",
    "@ohjobber/shared": "^0.0.7",
    "amqplib": "^0.10.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "elastic-apm-node": "^4.9.0",
    "email-templates": "^12.0.1",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "http-status-codes": "^2.3.0",
    "nodemailer": "^6.9.16",
    "pino-pretty": "^10.3.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@types/amqplib": "^0.10.6",
    "@types/email-templates": "^10.0.4",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/nodemailer": "^6.4.17",
    "@types/shelljs": "^0.8.15",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "fs-extra": "^11.2.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4",
    "typescript-transform-paths": "^3.5.2"
  },
  "description": ""
}
