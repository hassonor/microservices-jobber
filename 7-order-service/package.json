{
  "name": "jobber-order",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "start": "cross-env pm2 start ./build/src/app.js -i 5 --attach --watch | pino-pretty -c",
    "stop": "cross-env pm2 stop all",
    "delete": "cross-env pm2 delete all",
    "dev": "cross-env nodemon -r tsconfig-paths/register src/app.ts | pino-pretty -c",
    "lint:check": "cross-env eslint 'src/**/*.ts'",
    "lint:fix": "cross-env eslint 'src/**/*.ts' --fix",
    "prettier:check": "cross-env prettier --check 'src/**/*.{ts,json}'",
    "prettier:fix": "cross-env prettier --write 'src/**/*.{ts,json}'",
    "build": "cross-env tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "test": "cross-env jest --coverage=true -w=1 --forceExit --detectOpenHandles --watchAll=false"
  },
  "keywords": [],
  "author": "Or Hasson",
  "license": "MIT",
  "dependencies": {
    "@elastic/elasticsearch": "^8.15.0",
    "@ohjobber/shared": "^0.0.7",
    "amqplib": "^0.10.9",
    "bcrypt": "^6.0.0",
    "cloudinary": "^2.5.1",
    "compression": "^1.7.4",
    "cors": "^2.8.6",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "elastic-apm-node": "^4.15.0",
    "express": "^4.21.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "http-status-codes": "^2.3.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^8.7.2",
    "pino-pretty": "^11.3.0",
    "redis": "^4.7.0",
    "socket.io": "^4.8.3",
    "stripe": "^17.3.1",
    "typescript": "^5.9.3",
    "typescript-transform-paths": "^3.5.6",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@types/amqplib": "^0.10.8",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/hpp": "^0.2.7",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.23",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
